# Environment
ENVIRONMENT=production

# API Settings
PROJECT_NAME="YouTube Transcript API"
API_BASE=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security
API_KEY_NAME=X-API-Key
API_KEY=your-api-key

# Rate Limiting (uses slowapi formatting e.g. 5/minute)
RATE_LIMIT_ENABLED=true
RATE_LIMIT="60/minute"

# CORS Settings
BACKEND_CORS_ORIGINS=*

# Documentation Settings
DOCS_ENABLED=false
DOCS_URL=/docs
REDOC_URL=/redoc

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"